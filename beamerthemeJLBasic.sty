\defbeamertemplate*{footline}{JLBasic theme}
{
  \begin{beamercolorbox}[colsep=0.5pt]{upper separation line foot}
  \end{beamercolorbox}
  \hbox{%
    \begin{beamercolorbox}[wd=.5\paperwidth,ht=3ex,dp=1ex,left]{title in head/foot}%
      \usebeamerfont{title in head/foot}\hspace*{2ex}\insertshortauthor %
      \if\beamer@shortinstitute\empty\else\hspace*{1ex}\insertshortinstitute\fi%
      \hspace*{2ex} \if\beamer@shortdate\empty\insertdate\else\insertshortdate\fi%
    \end{beamercolorbox}%
    \begin{beamercolorbox}[wd=.5\paperwidth,ht=3ex,dp=1ex,right]{date in head/foot}%
      \usebeamerfont{date in head/foot}
      \insertframenumber{} / \inserttotalframenumber\hspace*{2ex} 
    \end{beamercolorbox}}%
}


